@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

@if (_loading)
{
    <CountryCardSkeleton></CountryCardSkeleton>
}
else
{
    <CountryCard></CountryCard>
}

@code{
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(5000);
        _loading = false;
    }
}